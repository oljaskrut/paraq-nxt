generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Post {
  id     String   @id @default(cuid())
  head   String
  body   String   @db.LongText
  image  String
  link   String   @unique
  source String
  date   DateTime
  hash   String   @unique
  hidden Boolean?
}

model FeaturedPost {
  id        String   @id @default(cuid())
  head      String
  body      String   @db.LongText
  image     String
  link      String   @unique
  hash      String   @unique
  source    String
  date      DateTime
  hidden    Boolean?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
